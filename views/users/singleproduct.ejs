      inputElement.value = 1;
    }
  }
  function triggerSweetAlert() {
      Swal.fire({
        title: 'Add to Cart?',
        // text: 'Add to cart?',
        icon: 'info',
        showCancelButton: true,
        confirmButtonText: 'OK',
        cancelButtonText: 'Cancel',
        preConfirm: () => {
